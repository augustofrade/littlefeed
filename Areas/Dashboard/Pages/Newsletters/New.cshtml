@page
@model LittleFeed.Areas.Dashboard.Pages.Newsletters.New;

@{
    Layout = "_Layout";
}

<h1>Create a Newsletter</h1>

<form method="post" class="form">
    <div class="mb-4">
        
    <div class="mb-3">
        <label asp-for="Input!.Name" class="mb-2">Name</label>
        <input asp-for="Input!.Name" class="form-control"/>
    </div>
    <div>
        <label asp-for="Input!.Description" class="mb-2">Description</label>
        <textarea asp-for="Input!.Description" class="form-control"></textarea>
    </div>
    </div>
    <div class="d-flex justify-content-end">
        <input class="btn btn-primary" type="submit" value="Create"/>
    </div>
</form>